{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "outDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.*", "./**/*.*"],
  "exclude": ["node_modules", "build"]
}